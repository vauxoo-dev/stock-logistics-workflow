<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="action_set_serials">
            <field name="name">Product Set Products Serial</field>
            <field name="res_model">product.serials_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_set_product_serial"/>
            <field name="target">new</field>
        </record>

        <record id="view_serial_set_picking_form" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
             <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_qty']" position="after">
                    <button name="%(action_set_serials)d" string="Set Serial" groups="stock.group_production_lot"  type="action" icon="STOCK_PREFERENCES"  context="{'default_product_id': product_id, 'default_picking_source_location_id': location_id, 'default_picking_destination_location_id': location_dest_id}"

                    attrs="{'invisible': [('state', 'not in', ['confirmed', 'assigned', 'waiting', 'done',])]}" 
                    />
                </xpath>
            </field>
        </record>
    </data>
</openerp>

