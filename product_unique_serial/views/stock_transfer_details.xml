<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_stock_enter_transfer_details_inh_pus" model="ir.ui.view">
            <field name="name">Enter transfer details inh pus</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="before">
                    <field name="picking_type_id"/>
                    <field name="picking_type_code"/>
                    <field name="lot_id_no_create" attrs="{'invisible': [('picking_type_code', '=', 'incoming')]}" options="{'no_create': True}"/>
                    <!--<field name="lot_id_no_create"/>-->
                </xpath>
                <!--<xpath expr="//field[@name='lot_id']" position="attributes">-->
                     <!--<attribute name="attrs">{'invisible': "[('transfer_id.picking_id.picking_type_id.code', '=', 'incoming')]"}</attribute>-->
                    <!--<attribute name="attrs">{'invisible': [('transfer_id.picking_id', '!=', 0)]}</attribute>-->
                    <!--
                    <attribute name="attrs">{'invisible': [('picking_type_id.code', '!=', 'incoming')]}</attribute>-->
                <!--</xpath>-->
            </field>
        </record>

        <record id="view_stock_enter_transfer_details_inh_pus2" model="ir.ui.view">
            <field name="name">Enter transfer details inh pus2</field>
            <field name="model">stock.transfer_details</field>
            <field name="inherit_id" ref="stock.view_stock_enter_transfer_details"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('picking_type_code', '!=', 'incoming')]}</attribute>
                    <!--<attribute name="invisible">[('picking_type_id.code', '!=', 'incoming')]</attribute>-->
                </xpath>
            </field>
        </record>

    </data>
</openerp>
